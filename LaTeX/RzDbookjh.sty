
%=============== shaded and non-shaded theorems =============
% The shadethm package allows, say, \begin{theorem} .. \end{theorem} 
% material to always come out shaded. 
\RequirePackage{shadethm}

% Theorem style for textual matters: remarks, etc.
\theoremstyle{plain}
\newtheoremstyle{text}%
{\thm@preskip}{\thm@postskip}%
{\normalfont}{0pt}{\bfseries}{}{ }%
{\arabic{section}.\arabic{shadetheorem}\ \thmname{#1}\ \thmnote{(#3)\ }} %
\theoremstyle{text} % the theorem environments below will use the `text' style

% shaded theorems
\newshadetheorem{theorem}{Theorem}[section]
\newshadetheorem{proposition}[theorem]{Proposition}
\newshadetheorem{axiom}[theorem]{Axiom}
\newshadetheorem{axioms}[theorem]{Axioms}
\newshadetheorem{definition}[theorem]{Definition}
\newshadetheorem{notation}[theorem]{Notation}
\newshadetheorem{stupidkludge}[theorem]{Theorem}
% unshaded theorems
\newtheorem{lemma}[theorem]{Lemma}
\newtheorem{corollary}[theorem]{Corollary}
\newtheorem{example}[theorem]{Example}
\newtheorem{exercise}[theorem]{Exercise}
\newtheorem{remark}[theorem]{Remark}
\newtheorem{note}[theorem]{Note} %conflicts with seminar
